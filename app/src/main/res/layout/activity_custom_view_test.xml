    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.study.shenxing.caesar.customview.CustomViewTestActivity">

    <com.study.shenxing.caesar.customview.RingView
        android:id="@+id/ring_view"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <com.study.shenxing.caesar.customview.TrianglePointer
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/ring_view"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
