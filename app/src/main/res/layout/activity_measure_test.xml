<?xml version="1.0" encoding="utf-8"?>
<com.study.shenxing.caesar.measuretest.TestMeasureViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.study.shenxing.caesar.measuretest.ProfilePhoto
        android:id="@+id/profile_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.study.shenxing.caesar.measuretest.Title
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.study.shenxing.caesar.measuretest.SubTitle
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.study.shenxing.caesar.measuretest.Menu
        android:id="@+id/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</com.study.shenxing.caesar.measuretest.TestMeasureViewGroup>
